  <body>
    <div class="wrapper">
      <!--=== Navigation Sidebar ===-->
      <%= render partial: 'layouts/partials/sidebar' %>
      <!--=== End Navigation Sidebar ===-->

      <div class="main-panel">
        <!--=== Navigation Header ===-->
        <%= render partial: 'layouts/partials/header' %>
        <!--=== End Navigation Header ===-->
        
        <div class="content">
          <div class="container-fluid">
            <div class="row">
            
              <%= yield :form_errors %>
					    <%= yield %>

              <script>
              function notificationAlert(color, message) {
                var options = { theme: 'NoticeBorder',
                                color: color,
                                position: { x: 'left',
                                            y: 'bottom' },
                                offset: { x: 25,
                                          y: -25 },
                                stack: true,
                                fade: 300,
                                closeOnESC: true,
                                zIndex: 99,
                                content: message };

                new jBox('Notice', options);
              }
              </script>
					    
					    <% if flash %>
					      <div id="flash-notice" title="Basic dialog" class="flash-div flash-message">
					        <%# bootstrap_flash %>
					        <% flash.each do |key, value| %>
					          <% if value.is_a?(String) %>
					            <script>
					              var message = ("<%= value %>")
					              
					              if ("<%= key %>" == "alert" ) {
					                var colorOption = "red";
					              }
					              else {
					                var colorOption = "green";
					              } 

					              var options = { theme: 'NoticeBorder',
					                              color: colorOption,
					                              position: { x: 'left',
					                                          y: 'bottom' },
					                              offset: { x: 25,
					                                        y: -25 },
					                              stack: true,
					                              fade: 300,
					                              closeOnESC: true,
					                              zIndex: 99,
					                              content: message };

					              new jBox('Notice', options);
					            </script>
					          <% end %>
					        <% end %>
					      </div>
					    <% end %>
            </div>
          </div>
        </div>

        <!--=== Navigation Footer ===-->
        <%= render partial: 'layouts/partials/footer' %>
        <!--=== End Navigation Footer ===-->
      </div>
    </div>
