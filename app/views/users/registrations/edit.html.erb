<div class="screen" id="screen-1" data-video="<%= devise_background_video %>"> 
  <div class="col-md-offset-3 col-md-6 margin-top-100">
    <div id="edit-user-form" class="wizard-container"> 
      <div class="card wizard-card wizard-card-transparent ct-wizard-azzure" id="edit-user-wizard">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "register-form") do |f| %>

          <div class="wizard-header">
            <h3>
              <b>Edit</b> User Account <br>
              <small>Edit your User Account Informtion</small>
            </h3>
          </div>
          
          <ul>
            <li><a href="#user-details" data-toggle="tab">User Details</a></li>
            <li><a href="#confirmation" data-toggle="tab">Confirm Changes</a></li>
          </ul>

          <div class="row">
            <div class="col-md-offset-1 col-md-10">
              <div class="error-messages">
                <%= devise_error_messages! %>
              </div>
            </div>
          </div> 
            
          <div class="tab-content">
            <div class="tab-pane" id="user-details">
              <div class="row">
                <h4 class="info-text"> Let's start with your account information.</h4>
                <div class="col-md-offset-1 col-md-10">
                  <div class="row">
                    <div class="col-md-2">
                      <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                        <div class="fileinput-new thumbnail img-circle img-raised">
                          <%= image_tag current_user.thumb %>
                        </div>
                        <div class="fileinput-preview fileinput-exists thumbnail img-rounded img-raised img-responsive"></div>
                        <div>
                          <span class="btn btn-raised btn-round btn-default btn-file btn-xs">
                            <span class="fileinput-new">
                              <i class="fa fa-plus"></i> Add Photo
                            </span>
                            
                            <span class="fileinput-exists">
                              <i class="fa fa-wrench"></i> Change
                            </span>
                            <%= f.file_field :image, id: "wizard-picture" %>
                          </span>
                          <a href="#pablo" class="btn btn-danger btn-round fileinput-exists btn-xs" data-dismiss="fileinput">
                            <i class="fa fa-times"></i> Remove
                          </a>
                        </div>
                      </div>
                    </div>

                    <div class="col-md-10">
                      <div class="row">
                        <div class="col-md-6">
                          <div class="form-group">
                            <%= f.label :name, class: "control-label" %>
                            <%= f.text_field :name,
                              id: "name-field", 
                              class: "form-control validate[required] step-1-required-field",
                              data: { "prompt-position" => "topLeft" } %>
                          </div>
                        </div>

                        <div class="col-md-6">
                          <div class="form-group">
                            <%= f.label :username, class: "control-label" %>
                            <%= f.text_field :username,
                              id: "username-field", 
                              class: "form-control validate[required] step-1-required-field",
                              data: { "prompt-position" => "topLeft" } %>
                          </div>
                        </div>
                      </div>
                      
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <%= f.label :email, class: "control-label" %>
                            <%= f.email_field :email, 
                              class: "form-control validate[required][custom[email]] step-1-required-field",
                              data: { "prompt-position" => "bottomLeft" } %>
                          </div>
                        </div>
                      </div>
                    </div> 
                  </div>
                </div>
              </div>
            </div>
            
            <div class="tab-pane" id="confirmation">
              <div class="row">
                <h4 class="info-text"> Confirm Account Changes.</h4>
                <div class="row margin-bottom-20">
                  <div class="col-md-offset-1 col-md-10 text-center">
                    <div class="panel panel-primary" id="current-password-block">
                      <div class="panel-body">
                          <div id="wizard-form-field-title">
                            Enter your current password to confirm changes:
                          </div>
                          <%= f.password_field :current_password, placeholder: "Current Password", 
                            class: "form-control validate[required] step-2-required-field",
                            data: { "prompt-position" => "topRight" } %>
                      </div>
                    </div>

                    <a href="#change-password-block" data-toggle="collapse" class="btn btn-primary btn-fill btn-sm btn-round">Change Password</a>

                    <%= render partial: "layouts/shared/delete_button", locals: { object_type: "User Account", 
                                                                                      url: registration_path(resource_name),
                                                                                      button_style: "btn-cancel-registration" } %>
                    <div id="change-password-block" class="collapse">
                      <div class="well margin-top-40" id="current-password-block">
                        <div class="row margin-bottom-20">
                          <div class="col-md-12">
                            <div class="row">
                              <div class="col-md-12">
                                <h4>
                                  Enter New Password
                                  <small><em>( Minimum of 8 Letter and/or Numbers )</em></small>
                                </h4>
                              </div>
                            </div>

                            <div class="row margin-bottom-20">
                              <div class="col-md-6">
                                <div class="form-group label-floating text-left">
                                  <%= f.label "Password", class: "control-label" %><br/>
                                  <%= f.password_field :password, 
                                    placeholder: "Minimum of 8 Letter and/or Numbers", 
                                    value: nil,
                                    autofill: "off",
                                    id: "password",
                                    class: "form-control validate[required[password],minSize[8]] step-2-required-field",
                                    data: { "prompt-position" => "bottomLeft" } %>
                                </div>
                              </div>
                            
                              <div class="col-md-6">
                                <div class="form-group label-floating text-left">
                                <%= f.label "Confirm Password", class: "control-label" %>
                                <%= f.password_field :password_confirmation, 
                                  class: "form-control validate[required[password],equals[password]] step-2-required-field",
                                  data: { "prompt-position" => "bottomLeft" } %>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
            <div class="wizard-footer">
              <div class="row">
                <div class="col-md-12">
                  <div class="pull-right">
                    <input type='button' class='btn btn-next btn-fill btn-primary btn-wd btn-sm' name='next' value='Next' />
                    <%= f.submit nil, :class => 'btn btn-finish btn-fill btn-primary btn-wd btn-sm', data: { disable_with: 'Uploading' } %>
                  </div>
                  
                  <div class="pull-left">
                    <%= link_to "Cancel", main_app.root_path, class: "btn btn-fill btn-warning btn-wd btn-sm" %>
                    <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='Previous' />
                  </div>

                  <div class="clearfix"></div>
                </div>
              </div>

            </div>  
        <% end %>
      </div>
    </div> <!-- wizard container -->
  </div>
</div> 

<script src="http://vjs.zencdn.net/c/video.js"></script>

<script>

  $(".valign__middle").each(function() {
    $(this).css("padding-top", $(this).parent().height() / 2 - $(this).height() / 2);
  });
  $(window).resize(function() {
    $(".valign__middle").each(function() {
    $(this).css("padding-top", $(this).parent().height() / 2 - $(this).height() / 2);
    });
  });

  var BV = new $.BigVideo();
  BV.init();
  if (Modernizr.touch) {
      BV.show('<%= homepage_background_poster %>');
  } else {
      BV.show('<%= homepage_background_video %>',{ambient:true});
  }

  BV.getPlayer().on("ended", function() {
    var player = BV.getPlayer();
    player.pause();
    player.currentTime(29);
  });
</script>

<script>

  $("#edit-user-form").ready(function() {
    /*  Activate the tooltips      */
    $('[rel="tooltip"]').tooltip();

    var wizard = $('#edit-user-wizard');
      
    wizard.bootstrapWizard({ 'tabClass': 'nav nav-pills',
                             'nextSelector': '.btn-next',
                             'previousSelector': '.btn-previous',
         
      onInit : function(tab, navigation, index){
        //check number of tabs and fill the entire row
        var $total = navigation.find('li').length;
        $width = 100/$total;
       
        $display_width = $(document).width();
       
        if($display_width < 600 && $total > 3){ $width = 50; }
     
        navigation.find('li').css('width',$width + '%'); 
      },
      onNext: function(tab, navigation, index){
        if(index == 1){
            return validateFirstStep();
        } else if(index == 2){
            return validateSecondStep();
        } //etc.    
      },
      onTabClick : function(tab, navigation, index){
        // Disable the posibility to click on tabs
        return false;
      }, 
      onTabShow: function(tab, navigation, index) {
        var $total = navigation.find('li').length;
        var $current = index+1;
        
        var wizard = navigation.closest('.wizard-card');
        
        // If it's the last tab then hide the last button and show the finish instead
        if($current >= $total) { $(wizard).find('.btn-next').hide();
                                 $(wizard).find('.btn-finish').show();
        } else { $(wizard).find('.btn-next').show();
                 $(wizard).find('.btn-finish').hide();
        };
      }
    });
    
    $('[data-toggle="image-wizard-radio"]').click(function(){
      wizard = $(this).closest('.wizard-card');
      wizard.find('[data-toggle="wizard-radio"]').removeClass('active');
      $(this).addClass('active');
      $(wizard).find('[type="radio"]').removeAttr('checked');
      $(this).find('[type="radio"]').attr('checked','true');
    });
    
    $('[data-toggle="image-wizard-checkbox"]').click(function(){
      if( $(this).hasClass('active')){ $(this).removeClass('active');
                                       $(this).find('[type="checkbox"]').removeAttr('checked');
      } else { $(this).addClass('active');
               $(this).find('[type="checkbox"]').attr('checked','true');
      };
    });
    
    $height = $(document).height();
    $('.set-full-height').css('height',$height);

    function validateFirstStep(){
      var validity = []
      var requiredFields1 = $("input.step-1-required-field")

      for (i = 0; i < requiredFields1.length; i++) { 
        validity.push($(requiredFields1[i]).validationEngine('validate'));
      };

      return !validity.includes(false);
    };
    function validateSecondStep(){
      var validity = []
      var requiredFields2 = $("input.step-2-required-field")

      for (i = 0; i < requiredFields2.length; i++) { 
        validity.push($(requiredFields2[i]).validationEngine('validate'));
      };

      return !validity.includes(false);
    };

    function readURL(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader();
            
        reader.onload = function (e) {
          $('#wizardPicturePreview').attr('src', e.target.result);
        }  
        reader.readAsDataURL(input.files[0]);
      }
    };
    
    $("#wizard-picture").change(function(){
        readURL(this);
    });
  });

  $("#cancel-image-wizard").click(function(e) {
    $(this).closest('form').find(".form-control").val("");
  });
</script>